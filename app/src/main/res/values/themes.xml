<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="totalCostBackground"/>

    <style name="Theme.PizzaUp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_800</item>
        <item name="colorPrimaryVariant">@color/green_800_dark</item>
        <item name="colorOnPrimary">@color/yellow_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_orange_800</item>
        <item name="colorSecondaryVariant">@color/deep_orange_800_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/yellow_50</item>
        <item name="totalCostBackground">@color/lime_200_light</item>
    </style>
</resources>